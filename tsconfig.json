{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "esnext",                           
    "lib": ["dom", "esnext"],                     
    "jsx": "react",                               
    "module": "esnext",                           
    "moduleResolution": "node",                   
    "forceConsistentCasingInFileNames": true,     
    "esModuleInterop": true,                      
    "strict": true,                               
    "skipLibCheck": true                          
  },
  "include": ["./src/**/*", "./gatsby-node.ts", "./gatsby-config.ts", "./plugins/**/*"]
}
